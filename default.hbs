<!DOCTYPE html>
<html>
<head>
    <link href="/assets/stylesheets/app.css" media="all" rel="stylesheet" type="text/css" />

    <link rel="icon" href="/favicon.ico" type="image/x-icon"/>
    <title>{{meta_title}}</title>

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />

</head>

<body class="{{body_class}}">
   <!--  <div class="bg"></div> -->
    <header class='fluid'>
        <div class="top-banner">
            <div class="container">
                <a href="/" class="brand">
                    <h1>
                        {{@blog.title}}
                    </h1>
                    <h2>
                        {{@blog.description}} 
                    </h2>
                </a>
            </div>  
        </div>
    </header> 
    <div class="main clearfix collapse">
        <div class="row collapse">

            <div class="columns large-9">
                <div class="content">
                    {{{body}}}
                </div>
            </div>

            <div class="columns large-3">
            <aside class="side-bar">
                <div class="box feature-post">
                    <h3 class='wiget-head'>Featured Posts</h3>
                    <div class="wiget-body">
                        <ul class="feature-gallery clearfix">
                            {{#foreach featuredPosts}}
                            <li style='background:url({{@blog.cover}});'>  
                            {{{content images="0"}}}
                            <h4> <a href='{{url}}'>{{{title}}}</a></h4>
                            </li>
                            {{/foreach}}
                        </ul>
                    </div>
                    <div class="fixed-arrow arrow-left">
                        <i class="icon-chevron-left"></i>
                    </div>
                    <div class="fixed-arrow arrow-right">
                        <i class="icon-chevron-right"></i>
                    </div>
                </div>
                <div class="box about-me">
                    {{#post}}
                    <img id="profile" src="{{author.cover}}" alt="">
                    <div class="wiget-body">
                      <div class="avatar">
                        <a href='{{author.website}}'>
                            <img src="{{author.image}}" alt="" id="avatar">
                            <img src="{{@blog.logo}}" alt="" id='weibo'>
                        </a>
                      </div>
                      <div class="bio">
                            <a href='{{author.website}}'><h3>{{author.name}}</h3></a>
                            <p class="muted">{{author.bio}}</p>
                      </div>
                    </div>
                    {{else}}
                    <img id="profile" src="{{posts.[0].author.cover}}" alt="">
                    <div class="wiget-body">
                      <div class="avatar">
                        <a href='{{posts.[0].author.website}}'>
                            <img src="{{posts.[0].author.image}}" alt="" id="avatar">
                            <img src="{{@blog.logo}}" alt="" id='weibo'>
                        </a>
                      </div>
                      <div class="bio">
                            <a href='{{posts.[0].author.website}}'><h3>{{posts.[0].author.name}}</h3></a>
                            <p class="muted">{{posts.[0].author.bio}}</p>
                      </div>
                    </div>
                    {{/post}}
                </div>

            </aside>
            </div>
        </div>
    </div>
    <div class="footer">
      <div class="container">
          {{> footer}}
      </div>
    </div>
    <script src="/assets/js/vendor/zepto.js"></script>


    <script src="/assets/js/highlight.pack.js"></script>    
    <script src="/assets/js/app.js"></script>
</body>
</html>
